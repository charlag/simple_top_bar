<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SimpleTopBar">

        <attr name="title_gravity" format="enum" >
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
        </attr>

        <attr name="ui_mode" format="enum">
            <enum name="icon" value="0"/>
            <enum name="title" value="1"/>
            <enum name="iconTitle" value="2"/>
            <enum name="menuIcon" value="3"/>
            <enum name="menuTitle" value="4"/>
            <enum name="menuIconTitle" value="5"/>
        </attr>

        <attr name="logo_res" format="integer"/>
        <attr name="menu_res" format="integer"/>
        <attr name="title_text" format="string"/>

        <attr name="menu_color" format="color"/>
        <attr name="title_color" format="color"/>

    </declare-styleable>

</resources>